@page "/counter"
@inject ICounterState state

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @state.CurrentCount</p>

<button class="btn btn-primary" @onclick="state.IncrementCount">+</button>
<button class="btn btn-primary" @onclick="state.DecrementCount">-</button>
<button class="btn btn-primary" @onclick="state.Clear">clear</button>
